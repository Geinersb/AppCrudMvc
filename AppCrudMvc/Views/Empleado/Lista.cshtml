@* con esto llamo a mi modelo para poder usarlo en la vista *@
@model List<AppCrudMvc.Models.Empleado>;

   <div class="row">
       <div class="col-sm-8 offset-sm-2">
           <h2>Lista Empleados</h2>

        <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>

<table class="table table-bordered">
    <thead>
        <tr>
                    <th>Id </th>
                    <th>Nombre Completo </th>
                    <th>Correo </th>
                    <th>Fcha Contrato </th>
                    <th>Activo</th>
                    <th></th>
        </tr>
     </thead>

     <tbody>
               @*  //para usar codigo c# tengo que usar la directiva @ *@
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                         <td>@item.NombreCompleto</td>
                        <td>@item.correo</td>
                        <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                         <td>@(item.Activo ? "SI": "NO")</td>
                        <td>
                            @* <a>
                             Eliminar
                            </a> *@

                        </td>
                    </tr>
                }



     </tbody>
      
</table>


       </div>
   </div>